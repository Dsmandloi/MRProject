{
  "openapi": "3.0.4",
  "info": {
    "title": "Student Result API",
    "version": "v1"
  },
  "paths": {
    "/": {
      "get": {
        "tags": [
          "StudentResultApi"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/students": {
      "post": {
        "tags": [
          "StudentResultApi"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Student"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/result/generate": {
      "post": {
        "tags": [
          "StudentResultApi"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ResultGenerateRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/students/{id}/result": {
      "get": {
        "tags": [
          "StudentResultApi"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Result": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "studentId": {
            "type": "integer",
            "format": "int32"
          },
          "student": {
            "$ref": "#/components/schemas/Student"
          },
          "totalMarksObtained": {
            "type": "number",
            "format": "double"
          },
          "totalMaximumMarks": {
            "type": "number",
            "format": "double"
          },
          "percentage": {
            "type": "number",
            "format": "double"
          },
          "grade": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "string",
            "nullable": true
          },
          "comments": {
            "type": "string",
            "nullable": true
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "subjects": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ResultSubject"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ResultGenerateRequest": {
        "type": "object",
        "properties": {
          "studentId": {
            "type": "integer",
            "format": "int32"
          },
          "subjects": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/SubjectInput"
            },
            "nullable": true
          },
          "comments": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ResultSubject": {
        "required": [
          "subjectName"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "resultId": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "studentId": {
            "type": "integer",
            "format": "int32"
          },
          "result": {
            "$ref": "#/components/schemas/Result"
          },
          "subjectName": {
            "minLength": 1,
            "type": "string"
          },
          "marksObtained": {
            "type": "number",
            "format": "double"
          },
          "maximumMarks": {
            "type": "number",
            "format": "double"
          },
          "grade": {
            "maxLength": 10,
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "Student": {
        "required": [
          "class",
          "name",
          "rollNumber"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "minLength": 1,
            "type": "string"
          },
          "rollNumber": {
            "minLength": 1,
            "type": "string"
          },
          "class": {
            "minLength": 1,
            "type": "string"
          },
          "results": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Result"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "SubjectInput": {
        "type": "object",
        "properties": {
          "subjectName": {
            "type": "string",
            "nullable": true
          },
          "marksObtained": {
            "type": "number",
            "format": "double"
          },
          "maximumMarks": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      }
    }
  }
}